generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id String @id @default(uuid())

  email    String  @unique
  password String
  escort   Boolean @default(false)
  code     Int?
  codeDate Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Escort {
  id String @id @default(uuid())

  name     String
  email    String  @unique
  password String
  sexo     String
  city     String
  escort   Boolean @default(true)
  code     Int?
  codeDate Int?

  dataEscort   DataOfEscort[]
  imagesEscort ImagesForEscort[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DataOfEscort {
  id String @id @default(uuid())

  price       String
  description String
  contact     String @unique
  type        String
  eyes        String
  waist       String
  dummy       Int
  feet        Int
  weight      String
  hip         String
  age         Int

  escort   Escort @relation(fields: [clientId], references: [id])
  clientId String
}

model ImagesForEscort {
  id String @id @default(uuid())

  urlPhoto String

  escort   Escort @relation(fields: [escortId], references: [id])
  escortId String
}
